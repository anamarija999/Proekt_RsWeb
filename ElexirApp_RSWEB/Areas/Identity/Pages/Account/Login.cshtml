@page
@model LoginModel

@{
    ViewData["Title"] = "Најави се";
}

<h1>@ViewData["Title"]</h1>
<div   class="row justify-content-center">

        <div class="card">
            <div class="card-block">
                <h2 class="card-header text-center">
                    <img src="https://www.beautynailhairsalons.com/img/beautynailhairsalons/logo.png" class="img-fluid"
                         alt="no picture" />
                </h2>
                <section style="background-color:lightgray">
                    <form id="account" method="post">

                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <b>Е-мејл:</b>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <b>Лозинка:</b>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-group " >
                            <button type="submit" class="btn btn-outline-dark" ><b>Најави се</b></button>
                        </div>

                    </form>
                </section>
            </div>
    
    </div>
    <div class="col-md-6 col-md-offset-2">
    </div>            
    </divstyle="margin-left:250px">

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
