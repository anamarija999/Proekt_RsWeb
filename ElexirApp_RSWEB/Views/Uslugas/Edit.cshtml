@model ElexirApp_RSWEB.ViewModel.EditUslugaViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Промени ги податоците</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Usluga.Id" />
            <div class="form-group">
                <label asp-for="Usluga.Name" class="control-label"></label>
                <input asp-for="Usluga.Name" class="form-control" />
                <span asp-validation-for="Usluga.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usluga.Price" class="control-label"></label>
                <input asp-for="Usluga.Price" class="form-control" />
                <span asp-validation-for="Usluga.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usluga.Duration" class="control-label"></label>
                <input asp-for="Usluga.Duration" class="form-control" />
                <span asp-validation-for="Usluga.Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usluga.Benefits" class="control-label"></label>
                <input asp-for="Usluga.Benefits" class="form-control" />
                <span asp-validation-for="Usluga.Benefits" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="Usluga.FirstEmployeeId" class="control-label"></label>
                <select asp-for="Usluga.FirstEmployeeId" class="form-control" asp-items="ViewBag.FirstEmployeeId"></select>
                <span asp-validation-for="Usluga.FirstEmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usluga.SecondEmployeeId" class="control-label"></label>
                <select asp-for="Usluga.SecondEmployeeId" class="form-control" asp-items="ViewBag.SecondEmployeeId"></select>
                <span asp-validation-for="Usluga.SecondEmployeeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Корисници</label>
                <select asp-for="SelectedKorisnici" class="form-control js-example-basic-multiple"
                        asp-items="Model.ListaKorisnici"> </select>
                <span asp-validation-for="SelectedKorisnici" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Зачувај" class="btn btn-outline-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a style="color:black" asp-action="Index">Врати назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>
    
}
