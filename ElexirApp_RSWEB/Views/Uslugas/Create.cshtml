@model ElexirApp_RSWEB.Models.Usluga

@{
    ViewData["Title"] = "Create";
}

<h1>Додади нова услуга</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label"></label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Benefits" class="control-label"></label>
                <input asp-for="Benefits" class="form-control" />
                <span asp-validation-for="Benefits" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstEmployeeId" class="control-label"></label>
                <select asp-for="FirstEmployeeId" class ="form-control" asp-items="ViewBag.FirstEmployeeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SecondEmployeeId" class="control-label"></label>
                <select asp-for="SecondEmployeeId" class ="form-control" asp-items="ViewBag.SecondEmployeeId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Креирај" class="btn btn-outline-dark" />
            </div>
        </form>
    </div>
</div>

<div>
    <a style="color:black" asp-action="Index">Bрати назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
