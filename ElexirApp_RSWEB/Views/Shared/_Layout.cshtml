<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" rel="stylesheet" />
    <title>@ViewData["Title"] - ElexirBeauty_RSWEB</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <header style="background-color:lightgray">
      
        
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-navbar border-bottom box-shadow mb-3">
            <div  class="container">

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />

                    <ul  class="navbar-nav flex-grow-1 ">
                       
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                    <li class="nav-item">
                        <a style="color:purple" class="nav-link text-dark " asp-area="" asp-controller="Uslugas" asp-action="Index"><b>Услуги</b></a>
                    </li>
                                    <li class="nav-item">
                                        <a style="color:purple" class="nav-link" asp-area="" asp-controller="Rezervacijas" asp-action="Index"><b>Резервации</b></a>
                                    </li>

                                                    <li class="nav-item">
                                                        <a style="color:purple" class="nav-link text-dark" asp-area="" asp-controller="Korisniks" asp-action="Index"><b>Корисници</b></a>
                                                    </li>
                                                                    <li class="nav-item">
                                                                        <a style="color:purple" class="nav-link" asp-area="" asp-controller="Vrabotens" asp-action="Index"><b>Вработени</b></a>
                                                                    </li>
}
                    

                        @if (User.Identity.IsAuthenticated && (User.IsInRole("Vraboten") || User.IsInRole("Korisnik")))
                        {

                    <li class="nav-item">
                        <a style="color:purple" class="nav-link " asp-area="" asp-controller="Home" asp-action="Index"><b>Мои термини</b></a>
                    </li>
}


                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer style="background-color:lightgray" class="border-top footer text-muted">
        <div class="container">
            <b>  &copy; 2021 - ElexirBeauty_RSWEB -</b> <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
